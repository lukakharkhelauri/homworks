<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RadioController">
   <children>
      <Label fx:id="label" layoutX="72.0" layoutY="200.0">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <RadioButton fx:id="choiceA" layoutX="21.0" layoutY="289.0" mnemonicParsing="false" onAction="#pick" text="ძაღლი">
         <toggleGroup>
            <ToggleGroup fx:id="answer" />
         </toggleGroup>
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="choiceB" layoutX="307.0" layoutY="289.0" mnemonicParsing="false" onAction="#pick" text="კურდღელი" toggleGroup="$answer">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="choiceC" layoutX="489.0" layoutY="289.0" mnemonicParsing="false" onAction="#pick" text="ჩიტი" toggleGroup="$answer">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="choiceD" layoutX="181.0" layoutY="289.0" mnemonicParsing="false" onAction="#pick" text="კატა" toggleGroup="$answer">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <TextField fx:id="textField" layoutX="201.0" layoutY="110.0" promptText="ex: bunny" />
      <Button fx:id="button" layoutX="261.0" layoutY="149.0" mnemonicParsing="false" onAction="#handleButtonClick" text="send" />
   </children>
</AnchorPane>
